<div class="container-fluid">
<div class="row">
<p id="notice"><%= notice %></p>

<div id="st-preloader">
		<div id="pre-status">
			<div class="preload-placeholder"></div>
		</div>
	</div><!-- /#st-preloader -->

	<section id="home-page">
		<div class="container-fluid home-bg">
			<div class="row">
				<div class="col-md-12 text-center home-page">
					<div class="main-logo">
						<a href=""><img src="/assets/logo.png" alt="" /></a>
					</div>
					<h1>Library Books Management</h1>
					<h4>See the available books in the library!</h4>
					<div class="container">
						<!-- COUNTDOWN -->      
						<div class="row">
							<div class="col-sm-12 tk-countdown">
								<div class="row">

								</div>
							</div>
						</div>
						<!-- /COUNTDOWN -->
					</div>
				
          <div class="col-md-12">
          <div class="card">
              <div class="card-header card-header-danger" style="background-color:tomato">
                  <h4 class="card-title " style="color:white">Books</h4>
                  <p class="card-category" style="color:white">Create or Update Book Record!</p>
              </div>
              <div class="card-body">
              <%= form_with(model: library, local: true) do |form| %>
                <% if library.errors.any? %>
                  <div id="error_explanation">
                    <h2><%= pluralize(library.errors.count, "error") %> prohibited this library from being saved:</h2>
              
                    <ul>
                    <% library.errors.full_messages.each do |message| %>
                      <li><%= message %></li>
                    <% end %>
                    </ul>
                  </div>
                <% end %>
              
                <div class="row">
                      <div class="col-md-1">
                        <%= form.label :name %>
                      </div>
                      <div class="col-md-3">
                  <%= form.text_field :name %>
                      </div>
                </div>
              
                <div class="row">
                <div class="col-md-1">
                <%= form.label :author %>
              </div>
              <div class="col-md-3">
              <%= form.text_field :author %>
              </div>   
                </div>
              
                <div class="row">
                <div class="col-md-1">
                <%= form.label :isbn %>
              </div>
              <div class="col-md-3">
              <%= form.text_field :isbn %>
              </div>  
                </div>
              
                <div class="row">
                <div class="col-md-1">
                <%= form.label :publisher %>
              </div>
              <div class="col-md-3">
              <%= form.text_field :publisher %>
              </div>  
                </div>
              
                <div class="row">
                <div class="col-md-1">
                <%= form.label :price %>
              </div>
              <div class="col-md-3">
              <%= form.text_field :price %>
              </div>  
                </div>
                <div class="row">
                <div class="col-md-1">
                <%= form.label :pages %>
              </div>
              <div class="col-md-3">
              <%= form.number_field :pages %>
              </div>  
                </div>
                <div class="row">
                <div class="col-md-1">
                <%= form.label :copies %>
              </div>
              <div class="col-md-3">
              <%= form.number_field :copies %>
              </div>  
                </div>
            
               
                <div class="actions">
                  <%= form.submit "Add/Update Book", class: "btn btn-danger" %>
                </div>
              <% end %>
              
              </div>
          </div>
      </div>
  </div>
  </div>


        
				</div>
			</div>
		</div>
	</section><!-- /#home-page -->

	

	<footer class="footer">
		<div class="container">
			<div class="row">
				<div class="col-sm-12 text-center">
					<p>&copy; 2021 <strong></strong>. All Rights Reserved. Designed by <strong><a href="http://templatestock.co" target="_blank">Me</a></strong></p>
				</div>
			</div>
		</div>
	</footer><!-- /.footer -->

	
	
    






<div class="container-fluid" >
<div class="row">

<p id="notice"><%= notice %></p>

<div id="st-preloader">
		<div id="pre-status">
			<div class="preload-placeholder"></div>
		</div>
	</div><!-- /#st-preloader -->

	<section id="vehicleContainer">
		<div class="container-fluid home-bg">
			<div class="row">
				<div class="col-md-12 text-center home-page">
					
          
					<h1>Vehicle Details</h1>
					<h4>See all the vehicles in the database!</h4>
					<div class="container">
						<!-- COUNTDOWN -->      
						<div class="row">
							<div class="col-sm-12 tk-countdown">
								<div class="row">

								</div>
							</div>
						</div>
						<!-- /COUNTDOWN -->
					</div>
				
          <div class="col-md-12">
          <div class="card">
              <div class="card-header card-header-danger" style="background-color:#0066ff">
                  <h4 class="card-title " style="color:white">Vehicles</h4>
                  <p class="card-category" style="color:white"> Here is the list of all vehicles!</p>
              </div>
              <div class="card-body">
                  <div class="table-responsive">
                      <table class="table">
                          <thead class="text-primary-dark">
                          <tr>
                          <th>Model</th>
                          <th>Manufacturer</th>
                          <th>Date of purchase</th>
                          <th>Owner</th>
                          <th>RC number</th>
                          <th colspan="3"></th>
                        </tr>
                          </thead>

                          <tbody>
                          <% @vehicles.each do |vehicle| %>
                            <tr>
                              <td><%= vehicle.model %></td>
                              <td><%= vehicle.manufacturer %></td>
                              <td><%= vehicle.date_of_purchase %></td>
                              <td><%= vehicle.owner.name %></td>
                              <td><%= vehicle.rc_number %></td>
                      
                              <td>
                                <button class="mdc-button mdc-button--outlined" id="myBtn">
                               <%= link_to 'Show', vehicle , class:"btn" %>
                              </button>
                              </td>
                              <td>
                              <button class="mdc-button mdc-button--outlined"  id="myBtn">
                             <%= link_to 'Edit', edit_vehicle_path(vehicle) , class:"btn" %>
                              </button>
                              </td>
                              <td>
                              <button class="mdc-button mdc-button--outlined"  id="myBtn">
                           <%= link_to 'Destroy', vehicle, class:"btn", method: :delete, data: { confirm: 'Are you sure?' } %>
                              </button>
                              </td>
                            </tr>
                          <% end %>
                          </tbody>  
                      </table>
                      <br>
                      <button class="mdc-button mdc-button--outlined" >
                     <%= link_to 'New Vehicle', new_vehicle_path %>
                    </button>
                    </div>
              </div>
          </div>
      </div>
  </div>
  </div>
				</div>
			</div>
		</div>
	</section>

	

	<footer class="footer">
		<div class="container">
			<div class="row">
				<div class="col-sm-12 text-center">
					<p>&copy; 2021 <strong></strong>. All Rights Reserved. Designed by <strong><a href="http://templatestock.co" target="_blank">Me</a></strong></p>
				</div>
			</div>
		</div>
	</footer><!-- /.footer -->



